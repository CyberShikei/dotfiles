module-margin-right = 2

font-0 = "Gohufont Nerd Font:sze=20;2"
font-1 = "Gohufont Nerd Font:size=13;3"
font-2 = "forkawesome:style=Bold:pixelsize=12;4"

modules-left = i3
modules-center = date
modules-right = pulseaudio memory cpu wlan eth battery powermenu

