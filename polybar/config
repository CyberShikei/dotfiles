[colors]
background = #AA000000
background-alt = #00000000
foreground = #ff0000
foreground-alt = #555
primary = #00ff0000
secondary = #e60053
alert = #AA0000
focused = #ff0000
unfocused = #880000
urgentbg = #00000000

[bar/example]
width = 100%
height = 3%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

